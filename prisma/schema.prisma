generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model LinkedRepo {
  id             Int      @id @default(autoincrement())
  userId         String   @unique
  repoType       String   // 'local' or 'remote'
  localPath      String?  // for local repos
  remoteUrl      String?  // for remote repos
  playwrightRoot String?  // path to Playwright config root
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  lastIndexStatus String?   // 'pending', 'success', 'error', etc.
  lastIndexError  String?   // error message if indexing failed
  lastIndexTime   DateTime? // last time indexing was attempted
}